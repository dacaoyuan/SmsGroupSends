<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eveyoo.sendmessagedaemon.DetailResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="发送结果统计详情"
            android:textColor="#3656f4"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:orientation="horizontal">

            <TextView
                style="@style/DetailResultActivityTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成功发送个数：" />

            <TextView
                android:id="@+id/antipate_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10" />

            <TextView
                style="@style/DetailResultActivityTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="失败个数：" />

            <TextView
                android:id="@+id/send_failure_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:orientation="horizontal">

            <TextView
                style="@style/DetailResultActivityTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未送达个数：" />

            <TextView
                android:id="@+id/failure_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无" />

        </LinearLayout>


        <TextView
            style="@style/DetailResultActivityTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:text="未送达手机号为：" />

        <TextView
            android:id="@+id/failure_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:text="无" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:orientation="horizontal">

            <TextView
                style="@style/DetailResultActivityTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成功送达个数：" />


            <TextView
                android:id="@+id/succeed_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无" />


        </LinearLayout>

        <TextView
            style="@style/DetailResultActivityTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:text="成功送达手机号为：" />

        <TextView
            android:id="@+id/succeed_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:text="暂无" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_marginTop"
            android:gravity="bottom"
            android:text="温馨提示：由于短信有延时，成功送达个数会实时更新！"
            android:textColor="#d28080" />

    </LinearLayout>


</ScrollView>
